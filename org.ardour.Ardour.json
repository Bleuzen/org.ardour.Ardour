{
  "app-id": "org.ardour.Ardour",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "ardour5",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    /* Wayland */
    "--socket=wayland",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from the home dir (portals donâ€™t work yet) */
    "--filesystem=home",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH=",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp"
  ],
  "modules": [
    "gtkmm2.json",
    {
      "name" : "boost",
      "buildsystem" : "simple",
      "cleanup" : [
        "/include",
        "/lib/libboost_*.so*",
        "/lib/libboost_*.a"
      ],
      "build-commands" : [
        "./bootstrap.sh",
        "./b2 install variant=release link=shared runtime-link=shared --prefix=/app --without-math --without-thread --without-container --without-log --without-system --without-filesystem --without-chrono --without-random --without-python -j $FLATPAK_BUILDER_N_JOBS"
      ],
      "sources" : [
        {
          "type" : "archive",
          "url" : "https://downloads.sourceforge.net/project/boost/boost/1.60.0/boost_1_60_0.tar.bz2",
          "sha256" : "686affff989ac2488f79a97b9479efb9f2abae035b5ed4d8226de6857933fd3b"
        }
      ]
    },
    {
      "name": "liblo",
      "sources": [
        {
          "type": "archive",
          "url": "http://download.sf.net/sourceforge/liblo/liblo-0.29.tar.gz",
          "sha256": "ace1b4e234091425c150261d1ca7070cece48ee3c228a5612d048116d864c06a"
        }
      ]
    },
    {
      "name": "taglib",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_SHARED_LIBS=ON"
      ],
      "cleanup": [
        "/include",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://taglib.github.io/releases/taglib-1.11.1.tar.gz",
          "sha256": "b6d1a5a610aae6ff39d93de5efd0fdc787aa9e9dc1e7026fa4c961b26563526b"
        }
      ]
    },
    {
      "name": "vamp-plugin-sdk",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/c4dm/vamp-plugin-sdk",
          "tag": "vamp-plugin-sdk-v2.7.1",
          "commit": "10be490c9902d874e9d772d94bf91448303d9b06"
        }
      ],
      "post-install": [
        "install -Dm644 -t /app/share/licenses/vamp-plugin-sdk COPYING"
      ],
      "cleanup": [
        "/bin"
      ]
    },
    {
      "name": "rubberband",
      "build-options": {
        "env": {
          "Vamp_CFLAGS": " ",
          "Vamp_LIBS": " "
        }
      },
      "sources": [
        {
          "type": "archive",
          "url": "https://bitbucket.org/breakfastquay/rubberband/get/v1.8.1.tar.gz",
          "sha256": "9bea85fc2e4d8c3044e3b87c6ecff4282a61a888bafe0ce07cee11fc0ea68f16"
        }
      ],
      "post-install": [
        "install -Dm644 -t /app/share/licenses/rubberband COPYING"
      ],
      "cleanup": [
        "/bin",
        "/share/ladspa"
      ],
      "modules": [
        {
          "name": "ladspa",
          "no-autogen": true,
          "subdir": "src",
          "make-install-args": [
            "INSTALL_PLUGINS_DIR=/app/lib/ladspa",
            "INSTALL_INCLUDE_DIR=/app/include",
            "INSTALL_BINARY_DIR=/app/bin"
          ],
          "cleanup": [
            "/bin"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "http://www.ladspa.org/download/ladspa_sdk_1.15.tgz",
              "sha256": "4229959b09d20c88c8c86f4aa76427843011705df22d9c28b38359fd1829fded"
            }
          ]
        }
      ]
    },
    {
      "name": "fftw3f",
      "config-opts": [
        "--enable-threads",
        "--enable-shared",
        "--disable-static",
        "--enable-float"
      ],
      "build-options": {
        "arch": {
          "x86_64": {
            "config-opts": [
              "--enable-sse2",
              "--enable-avx",
              "--enable-avx-128-fma"
            ]
          }
        }
      },
      "sources": [
        {
          "type": "archive",
          "url": "http://www.fftw.org/fftw-3.3.8.tar.gz",
          "sha256": "6113262f6e92c5bd474f2875fa1b01054c4ad5040f6b0da7c03c98821d9ae303"
        }
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/*.la"
      ]
    },
    "shared-modules/python2.7/python-2.7.json",
    {
      "name": "aubio",
      "buildsystem": "simple",
      "build-commands": [
        "python3 ./waf configure --prefix=/app --libdir=/app/lib --enable-fftw3f --enable-complex --enable-samplerate",
        "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
        "python3 ./waf install"
      ],
      "sources": [
        {
          "type": "archive",
          "url": " http://aubio.org/pub/aubio-0.4.7.tar.bz2",
          "sha256": "cbed4afec5ab3a1a6300c7e3af0a1369379aa94259f5e701a8ca905cdd9fa041"
        }
      ]
    },
    {
      "name": "libusb",
      "sources" : [
        {
          "type" : "archive",
          "url" : "https://github.com/libusb/libusb/releases/download/v1.0.22/libusb-1.0.22.tar.bz2",
          "sha256" : "75aeb9d59a4fdb800d329a545c2e6799f732362193b465ea198f2aa275518157"
        }
      ],
      "config-opts" : ["--disable-udev"]
    },
    {
      "name": "jack2",
      "buildsystem": "simple",
      "build-commands": [
        "./waf configure --prefix=/app --htmldir=/app/share/doc/jack/ --freebob=no --classic",
        "./waf build -j $FLATPAK_BUILDER_N_JOBS",
        "./waf install"
      ],
      "cleanup": [
        "/bin",
        "/share",
        "/lib/jack",
        "/lib/libjackserver.so*"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/jackaudio/jack2/releases/download/v1.9.12/jack2-1.9.12.tar.gz",
          "sha256": "deefe2f936dc32f59ad3cef7e37276c2035ef8a024ca92118f35c9a292272e33"
        }
      ]
    },
    {
      "name": "lrdf",
      "rm-configure": true,
      "modules": [
        {
          "name": "libxml2",
          "config-opts": [
            "--without-python",
            "--disable-static"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/GNOME/libxml2/archive/v2.9.8.tar.gz",
              "sha256": "ff879b0d9142564bfe63df9753df936f05150afdd7bae07261f12d4dad33ba4a"
            }
          ]
        },
        {
          "name": "raptor2",
          "config-opts": [
            "--disable-static"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "http://download.librdf.org/source/raptor2-2.0.15.tar.gz",
              "sha256": "ada7f0ba54787b33485d090d3d2680533520cd4426d2f7fb4782dd4a6a1480ed"
            }
          ]
        }
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/swh/LRDF/tarball/0.5.0",
          "dest-filename": "swh-LRDF-0.5.0-0-g7ebc032.tar.gz",
          "sha256": "013002b91ef209827fe99552b8c7f0b569cddb3d6f1439bedbd8bafe1956a93c"
        },
        {
          "type": "script",
          "commands": [
            "autoreconf -fiv"
          ],
          "dest-filename": "autogen.sh"
        }
      ]
    },
    {
      "name": "lv2",
      "buildsystem": "simple",
      "build-commands": [
        "python3 ./waf configure --prefix=/app --lv2dir=/app/lib/lv2 --copy-headers",
        "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
        "python3 ./waf install"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://lv2plug.in/spec/lv2-1.16.0.tar.bz2",
          "sha256": "dec3727d7bd34a413a344a820678848e7f657b5c6019a0571c61df76d7bdf1de"
        }
      ],
      "post-install": [
        "install -Dm644 -t /app/share/licenses/lv2 COPYING"
      ],
      "cleanup": [
        "/bin",
        "/share/lv2specgen"
      ]
    },
    {
      "name": "serd",
      "buildsystem": "simple",
      "build-commands": [
        "python3 ./waf configure --prefix=/app",
        "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
        "python3 ./waf install"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.drobilla.net/serd-0.30.2.tar.bz2",
          "sha256": "9d3102701172804f823f2215ca3147c50eba992641f9fbe014272355f4937202"
        }
      ],
      "post-install": [
        "install -Dm644 -t /app/share/licenses/serd COPYING"
      ],
      "cleanup": [
        "/bin",
        "/share/man"
      ]
    },
    {
      "name": "sord",
      "buildsystem": "simple",
      "build-commands": [
        "python3 ./waf configure --prefix=/app",
        "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
        "python3 ./waf install"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.drobilla.net/sord-0.16.4.tar.bz2",
          "sha256": "b15998f4e7ad958201346009477d6696e90ee5d3e9aff25e7e9be074372690d7"
        }
      ],
      "post-install": [
        "install -Dm644 -t /app/share/licenses/sord COPYING"
      ],
      "cleanup": [
        "/bin",
        "/share/man"
      ]
    },
    {
      "name": "sratom",
      "buildsystem": "simple",
      "build-commands": [
        "python3 ./waf configure --prefix=/app",
        "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
        "python3 ./waf install"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.drobilla.net/sratom-0.6.4.tar.bz2",
          "sha256": "146c8f14b8902ac3c8fa8c2e0a014eb8a38fab60090c5adbfbff3e3b7c5c006e"
        }
      ],
      "post-install": [
        "install -Dm644 -t /app/share/licenses/sratom COPYING"
      ]
    },
    {
      "name": "lilv",
      "buildsystem": "simple",
      "build-commands": [
        "python3 ./waf configure --prefix=/app",
        "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
        "python3 ./waf install"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.drobilla.net/lilv-0.24.6.tar.bz2",
          "sha256": "5f544cf79656e0782a03a2cc7ab1d31a93f36d71d4187bd427ade8d7b55370dc"
        }
      ],
      "post-install": [
        "install -Dm644 -t /app/share/licenses/lilv COPYING"
      ],
      "cleanup": [
        "/bin",
        "/etc",
        "/share/man"
      ]
    },
    {
      "name": "suil",
      "buildsystem": "simple",
      "build-commands": [
        "python3 ./waf configure --prefix=/app",
        "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
        "python3 ./waf install"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://download.drobilla.net/suil-0.10.6.tar.bz2",
          "sha256": "06fc70abaa33bd7089dd1051af46f89d378e8465d170347a3190132e6f009b7c"
        }
      ],
      "post-install": [
        "install -Dm644 -t /app/share/licenses/suil COPYING"
      ],
      "cleanup": [
        "/bin",
        "/etc",
        "/share/man"
      ]
    },
    {
      "name": "ardour",
      "buildsystem": "simple",
      "build-commands": [
        "./waf configure --prefix=/app --no-phone-home --freedesktop --with-backends=jack,alsa,dummy",
        "./waf build -j $FLATPAK_BUILDER_N_JOBS",
        "./waf i18n -j $FLATPAK_BUILDER_N_JOBS",
        "./waf install"
      ],
      "post-install": [
        "desktop-file-edit --set-key=Name --set-value=\"Ardour 5\" --set-generic-name=\"Digital Audio Workstation\" --set-key=X-GNOME-FullName --set-value=\"Ardour v5 (Digital Audio Workstation)\" --set-comment=\"Record, mix and master audio\" --remove-category=AudioEditing --add-category=X-AudioEditing --set-icon=${FLATPAK_ID} build/gtk2_ardour/ardour5.desktop",
        "install -Dm644 build/gtk2_ardour/ardour5.desktop /app/share/applications/${FLATPAK_ID}.desktop",
        "install -Dm644 build/gtk2_ardour/ardour5.appdata.xml /app/share/appdata/${FLATPAK_ID}.appdata.xml",
        "for s in 16 22 32 48 256 512; do install -Dpm644 /app/share/ardour5/resources/Ardour-icon_${s}px.png /app/share/icons/hicolor/${s}x${s}/apps/${FLATPAK_ID}.png ; done"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://community.ardour.org/src/Ardour-5.12.0.tar.bz2",
          "sha256": "7e2a679b9a7eca7c72ec2fb9839b3e7d9e0049d83a8f9a1682788b5206fbd526"
        },
        {
          "type": "patch",
          "path": "patches/ardour5-5.12.0-appdata.patch"
        },
        {
          "type": "patch",
          "path": "patches/ardour5-5.12.0-appdata-revision.patch"
        },
        {
          "type": "patch",
          "path": "patches/ardour5-5.12.0-appdata-flatpak.patch"
        },
        {
          "type": "patch",
          "path": "patches/ardour5-hidpi.patch"
        }
      ]
    }
  ]
}
